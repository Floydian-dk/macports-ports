#! /bin/sh

SED="/opt/local/bin/gsed"
prefix="/opt/local"
datarootdir="/opt/local/php"
exec_prefix="${prefix}"
version="7.4.10"
vernum="70410"
include_dir="/opt/local/include/php/php"
includes="-I$include_dir -I$include_dir/main -I$include_dir/TSRM -I$include_dir/Zend -I$include_dir/ext -I$include_dir/ext/date/lib"
ldflags=" -L/opt/local/lib -L/opt/local/lib/mariadb/mysql"
libs=" -lc-client4  -ltidy -lresolv -lncurses -lldap -llber -lstdc++ -lpam -liconv -liconv -lgmp -lintl -lbz2 -lm  -lxml2 -lgssapi_krb5 -lkrb5 -lk5crypto -lcom_err -lssl -lcrypto -lpcre2-8 -lz -lcurl -lxml2 -lz -lpng16 -lwebp -ljpeg -lXpm -lX11 -lfreetype -lgssapi_krb5 -lkrb5 -lk5crypto -lcom_err -lssl -lcrypto -licuio -licui18n -licuuc -licudata -lonig -lmysqlclient -lz -lmysqlclient -lz -ledit -lxml2 -lxml2 -lxml2 -lxml2 -lzip "
extension_dir='/opt/local/lib/php/extensions/no-debug-non-zts-20190902'
man_dir=`eval echo /opt/local/share/man`
program_prefix=""
program_suffix="7.4"
exe_extension=""
php_cli_binary=NONE
php_cgi_binary=NONE
configure_options=" '--prefix=/opt/local' '--mandir=/opt/local/share/man' '--infodir=/opt/local/share/info' '--program-suffix=7.4' '--includedir=/opt/local/include/php' '--libdir=/opt/local/lib/php' '--with-config-file-path=/opt/local/etc/php' '--with-config-file-scan-dir=/opt/local/var/db/php' '--with-apxs2=/opt/local/bin/apxs' '--disable-cli' '--enable-fpm' '--disable-cgi' '--disable-all' '--with-libxml' '--with-openssl' '--with-kerberos=/opt/local' '--with-external-pcre=/opt/local' '--with-zlib=/opt/local' '--enable-bcmath' '--with-bz2=/opt/local' '--enable-calendar' '--enable-ctype' '--with-curl' '--enable-dom' '--enable-exif' '--enable-fileinfo' '--enable-filter' '--enable-gd' '--with-webp' '--with-jpeg' '--with-xpm' '--with-freetype' '--enable-gd-native-ttf' '--with-gettext=/opt/local' '--with-gmp=/opt/local' '--with-mhash=/opt/local' '--with-iconv=/opt/local' '--with-imap=/opt/local' '--with-kerberos' '--with-imap-ssl=/opt/local' '--enable-intl' '--enable-json' '--with-ldap=/opt/local' '--with-ldap-sasl' '--enable-mbstring' '--enable-mbregex' '--enable-opcache' '--enable-pdo' '--with-zlib-dir=/opt/local' '--enable-phar' '--enable-posix' '--with-libedit' '--enable-session' '--enable-simplexml' '--with-tidy=/opt/local' '--enable-tokenizer' '--enable-xml' '--enable-xmlreader' '--enable-xmlwriter' '--with-zip' '--with-fpm-user=www' '--with-fpm-group=www' '--with-mysql=/opt/local/var/macports/build/_Users_jenschristianskov_ports_lang_fldphp/fldphp/work/mariadb' '--with-mysqli=/opt/local/lib/mariadb/bin/mysql_config' '--with-pdo-mysql=/opt/local/lib/mariadb/bin/mysql_config' '--with-mysql-sock=/opt/local/var/run/mariadb/mysqld.sock'"
php_sapis=" apache2handler fpm phpdbg"
ini_dir="/opt/local/var/db/php"
ini_path="/opt/local/etc/php"

# Set php_cli_binary and php_cgi_binary if available
for sapi in $php_sapis; do
  case $sapi in
  cli)
    php_cli_binary="${exec_prefix}/bin/${program_prefix}php${program_suffix}${exe_extension}"
    ;;
  cgi)
    php_cgi_binary="${exec_prefix}/bin/${program_prefix}php-cgi${program_suffix}${exe_extension}"
    ;;
  esac
done

# Determine which (if any) php binary is available
if test "$php_cli_binary" != "NONE"; then
  php_binary="$php_cli_binary"
else
  php_binary="$php_cgi_binary"
fi

# Remove quotes
configure_options=`echo $configure_options | $SED -e "s#'##g"`

case "$1" in
--prefix)
  echo $prefix;;
--includes)
  echo $includes;;
--ldflags)
  echo $ldflags;;
--libs)
  echo $libs;;
--extension-dir)
  echo $extension_dir;;
--include-dir)
  echo $include_dir;;
--php-binary)
  echo $php_binary;;
--php-sapis)
  echo $php_sapis;;
--configure-options)
  echo $configure_options;;
--man-dir)
  echo $man_dir;;
--ini-path)
  echo $ini_path;;
--ini-dir)
  echo $ini_dir;;
--version)
  echo $version;;
--vernum)
  echo $vernum;;
*)
  cat << EOF
Usage: $0 [OPTION]
Options:
  --prefix            [$prefix]
  --includes          [$includes]
  --ldflags           [$ldflags]
  --libs              [$libs]
  --extension-dir     [$extension_dir]
  --include-dir       [$include_dir]
  --man-dir           [$man_dir]
  --php-binary        [$php_binary]
  --php-sapis         [$php_sapis]
  --ini-path          [$ini_path]
  --ini-dir           [$ini_dir]
  --configure-options [$configure_options]
  --version           [$version]
  --vernum            [$vernum]
EOF
  exit 1;;
esac

exit 0
